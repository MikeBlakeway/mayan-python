{
  "name": "mayanwebstudio",
  "version": "1.0.0",
  "description": "A simple Django project boilerplate with Sass 7-1 architecture, compiler and live reload via BrowserSync",
  "main": "index.js",
  "scripts": {
    "css-compile": "node-sass main/static/main/scss -o main/static/main/css",
    "css-watch": "node-sass main/static/main/scss -o main/static/main/css --watch",
    "browser-sync": "browser-sync start --files \"main/static/main/css/*.css, main/static/main/js/*.js, main/**/*.py, main/templates/*.html\" --proxy 127.0.0.1:8000",
    "start": "concurrently --kill-others \"npm run css-watch\" \"npm run browser-sync\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikeBlakeway/mayanwebstudio.git"
  },
  "author": "Mike Blakeway",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MikeBlakeway/mayanwebstudio/issues"
  },
  "homepage": "https://github.com/MikeBlakeway/mayanwebstudio#readme",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^4.1.1",
    "node-sass": "^4.12.0"
  }
}